@{<h1> Create</h1>
    <form>

        <div class="form-group col-md-4">
            <label for="inputtitle">Title</label>
            <input type="text" class="form-control" id="inputTitle">
        </div>
        <div class="form-group row-cols-md-4">
            <label for="inputDiscription">Description</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" cols="3"></textarea>
        </div>
        <div class="form-group col-md-4">
            <label for="inputStatus">Status</label>
            <select id="inputStatus" class="form-control">
                <option selected>Choose...</option>
                <option value="1">ToDo</option>
                <option value="2">In-Progress</option>
                <option value="3">Done</option>
            </select>
        </div>
        <div class="form-group col-md-4" id='picker'>
            <label for="">Date</label>
            <input type='text' class="form-control" />
            <span class="input-group-addon">
                <span class="glyphicon glyphicon-calendar"></span>
            </span>
        </div>
        <div class="form-group col-md-4">
            <label for="inputStatus">Priority</label>
            <select id="inputStatus" class="form-control">
                <option selected>Choose...</option>
                <option value="1">High</option>
                <option value="2">Medium</option>
                <option value="3">Low</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
}
